{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es2017"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [
			"chrome",
			"intern"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}